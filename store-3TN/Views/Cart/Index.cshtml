@using store_3TN.Models;
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Cart = Context.Session.Get<List<Cart>>("Cart");
    int total = 0;
}
<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Giỏ hàng</h1>
                <nav class="d-flex align-items-center">
                    <a href="index.html">Trang chủ<span class="lnr lnr-arrow-right"></span></a>
                    <a href="#">Giỏ hàng</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->

<!--================Cart Area =================-->
@if (Cart!=null)
{
<section class="cart_area">
    <div class="container">
        <div class="cart_inner">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Sản phẩm</th>
                            <th scope="col"></th>
                            <th scope="col">Giá</th>
                            <th scope="col">Số lượng</th>
                            <th scope="col">Tổng tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Cart)
                        {
                            <tr>
                                <td>
                                    <div class="media">
                                        <div class="d-flex">
                                            <img src="@item.Product.Thumb" class='img-product' alt="">
                                        </div>
                                        <div class="media-body">
                                            <p>@item.Product.ProductName</p>
                                        </div>
                                    </div>

                                </td>

                                <td>
                                    <a class="btn-delete ml-3 genric-btn default-border small" asp-controller="Cart"
                                    asp-action="RemoveFromCart" asp-route-ProductID="@item.Product.ProductId">Xóa</a>
                                </td>
                                <td>
                                    <h5 class="product-price">@item.Product.Price.ToString("N0") VNĐ</h5>
                                </td>
                                <td>
                                    <div class="product_count">
                                        <input type="text" name="qty" data-id="1" value=@item.Amount title="Quantity:"
                                        class="input-text qty">
                                        <a asp-controller="Cart"
                                    asp-action="IncreaseAmount" asp-route-ProductID="@item.Product.ProductId"><button class="increase items-count" data-id="1" type="button"><i
                                            class="lnr lnr-chevron-up"></i></button></a>
                                        <a asp-controller="Cart"
                                    asp-action="DecreaseAmount" asp-route-ProductID="@item.Product.ProductId"><button class="reduced items-count" data-id="1" type="button"><i
                                            class="lnr lnr-chevron-down"></i></button></a>
                                    </div>
                                </td>
                                <td>
                                    <h5 class="product-cost" style="min-width: 200px;">@item.TotalMoney.ToString("N0") VNĐ</h5>
                                    @{
                                        total += item.TotalMoney;
                                    }
                                </td>
                            </tr>
                        }
                        @* *@
                        <tr class="bottom_button">
							<td>
								<a asp-controller="Cart"
                                    asp-action="DeleteCart" class="primary-btn" name="xoahet">Xóa hết</a>
							</td>
							<td>
							</td>
							<td>
							</td>
							<td>
                                <h5>Tổng tiền</h5>
							</td>
							<td>
                                <h5 id="total-cost">@total.ToString("N0") VNĐ</h5>
								@* <div class="cupon_text d-flex align-items-center justify-content-end">
									<input type="text" placeholder="Mã giảm giá">
									<a class="primary-btn">Dùng</a>
								</div> *@
							</td>
						</tr>
                        @* <tr>
                            <td>

                            </td>
                            <td>

                            </td>
                            <td>
                                <h5>Tổng tiền</h5>
                            </td>
                            <td>
                                <h5 id="total-cost">@total.ToString("N0") VNĐ</h5>
                            </td>
                        </tr> *@
                        @* <tr class="shipping_area">
                            <td>

                            </td>
                            <td>

                            </td>
                            <td>

                                <h5>Vận chuyển</h5>
                            </td>
                            <td>
                                <div class="shipping_box">
                                    <ul class="list">
                                        <li><a href="#">30000 đồng</a></li>
                                    </ul>
                                    <h6>Phí vận chuyển <i class="fa fa-caret-down" aria-hidden="true"></i></h6>
                                </div>
                            </td>
                        </tr> *@
                        <tr class="out_button_area">
                            <td>

                            </td>
                            <td>

                            </td>
                            <td>

                            </td>
                            <td></td>
                            <td>
                                <div class="checkout_btn_inner d-flex align-items-center">
                                    <a class="gray_btn" href="#">Tiếp tục shopping</a>
                                    @if (@Context.Session.GetString("AccountId") == null)
                                    {
                                        <a href="/login?returnUrl=/checkout" class="primary-btn">Đi đến thanh toán</a>
                                    }
                                    else
                                    {
                                        <a href="/checkout" class="primary-btn">Đi đến thanh toán</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
} else
{
    // chưa có sản phẩm nào trong giỏ hàng
    <br>
    <h1 class="text-center">Giỏ hàng trống</h1>
    // center h1
    <br>
    
}
<!--================End Cart Area =================-->
