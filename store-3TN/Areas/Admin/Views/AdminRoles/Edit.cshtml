@model store_3TN.Models.Role

@{
    ViewData["Title"] = "Chỉnh sửa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Danh sách quyền truy cập</a>
            <span class="breadcrumb-item active">Chỉnh sửa quyền truy cập</span>
        </nav>
    </div>
</div>
<h1>Chỉnh sửa quyền truy cập</h1>
<form asp-action="Edit" asp-route-id="@Model.RoleId" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="RoleId">
    <div class="form-group">   
        <div class="form-group row col-md-6">
            <label class="col-sm-2 col-form-label">Tên</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="RoleName" placeholder="Tên quyền truy cập">
            </div>
        </div>
        <div class="form-group row col-md-6">
            <label class="col-sm-2 col-form-label">Mô tả</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Description" placeholder=" Mô tả quyền truy cập">
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" value="Edit"  class="btn btn-primary">Lưu</button>
        </div>
    </div>

  
</form>


