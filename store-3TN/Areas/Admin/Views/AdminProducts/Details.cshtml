@model store_3TN.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="header-sub-title">
    <nav class="breadcrumb breadcrumb-dash">
        <a class="breadcrumb-item" asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
        <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">Danh sách sản phẩm</a>
                    <span class="breadcrumb-item active">Chi tiết sản phẩm</span>
        
    </nav>
</div>
<br />
<h1>Chi tiết sản phẩm</h1>
<hr />
<div>
    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
                            <div class="media align-items-center m-b-15">
                                <div class="avatar avatar-image rounded" style="height: 70px; width: 70px">
                                    <img src="@Model.Thumb" alt="">
                                </div>
                                <div class="m-l-15">
                                    <h4 class="m-b-0">@Model.ProductName</h4>
                                </div>
                            </div>
                        </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID: </td>
                        <td class="text-dark font-weight-semibold">@Model.ProductId</td>
                    </tr>
                    <tr>
                        <td>Tên sản phẩm </td>
                        <td>@Model.ProductName</td>
                    </tr>
                    <tr>
                        <td>Mô tả ngắn: </td>
                        <td>@Model.ShortDesc</td>
                    </tr>
                    <tr>
                        <td>Mô tả: </td>
                        <td>@Model.Description</td>
                    </tr>
                    <tr>
                        <td>Ram: </td>
                        <td>@Model.Ram</td>
                    </tr>
                    <tr>
                        <td>Màu sắc: </td>
                        <td>@Model.Color</td>
                    </tr>
                    <tr>
                        <td>Series: </td>
                        <td>@Model.Series</td>
                    </tr>
                    <tr>
                        <td>Giá: </td>
                        <td>@Model.Price</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div>
    </div>
