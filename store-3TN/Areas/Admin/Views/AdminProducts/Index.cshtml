@model PagedList.Core.IPagedList<store_3TN.Models.Product>

@{
	ViewData["Title"] = "Danh sách sản phẩm";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
	int CurrentPage = ViewBag.CurrentPage;
}
<!--Start page header -->
<div class="page-header">
	<div class="header-sub-title">
		<nav class="breadcrumb breadcrumb-dash">
			<a class="breadcrumb-item" asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
			<a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">Danh sách sản phẩm</a>
			@*            <span class="breadcrumb-item active">Tạo mới quyền truy cập</span>
			*@
		</nav>
	</div>
	<!--End page header -->
	<br />
	<br />
<h1>Danh sách sản phẩm</h1>

	<div class="card">
		<div class="card-body">
			<div class="row m-b-30">
				<div class="col-lg-8">
					<div class="row">
                    <div class="col-md-6">
                        <div class="input-affix m-v-10">
                            <i class="prefix-icon anticon anticon-search opacity-04"></i>
                            <input id="keyword" name="keyword" type="text" class="form-control" placeholder="Tìm kiếm sản phẩm">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-affix m-v-10">
                            <select class="custom-select" id="txtCatID" name="txtCatID" style="min-width: 200px;" asp-items="ViewBag.LoaiSanPham">
                                <option selected>Chọn danh mục</option>
                                <option value="0">Chọn tất cả</option>
                            </select>
                        </div>
                    </div>
                </div>
				</div>
				<!--Start input search -->
				<div class="col-lg-4 text-right">
					<a class="btn btn-primary" asp-area="Admin" asp-controller="AdminProducts" asp-action="Create"><i class="anticon anticon-plus-circle m-r-5"></i><span>Thêm sản phẩm</span></a>
				</div>
			</div>
			<div class="table-responsive">
				<table class="table table-hover e-commerce-table">
					<thead>
						<tr>
							<th>ID</th>
							<th>Tên sản phẩm</th>
							<th>Loại sản phẩm</th>
							<th>Giá bán</th>
							<th>Số lượng</th>
							<th>Trạng thái</th>
							<th>Thao tác</th>
						</tr>
					</thead>
					<tbody id="records_table">
						@if (@Model != null)
						{
							foreach (var item in Model)
							{
								<tr>
									<td>@item.ProductId</td>
									<td width="30%">@item.ProductName</td>
									@if (item.Cat != null)
									{
										<td>@item.Cat.CatName</td>

									}
									else
									{
										<td></td>
									}
									<td>@item.Price.ToString("#,##0") VNĐ</td>
									<td>@item.UnitsInStock</td>
									@if (item.UnitsInStock.Value > 0)
									{
										<td>Còn hàng</td>
									}
									else
									{
										<td>Hết hàng</td>
									}
									<td>
										<a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="AdminProducts" asp-action="Details" asp-route-id="@item.ProductId">Chi tiết</a>
										<a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="AdminProducts" asp-action="Edit" asp-route-id="@item.ProductId">Sửa</a>
									</td>
								</tr>
							}
						}
					</tbody>
				</table>
				<div aria-label="Page navigation example">
					<ul class="pagination">
						<pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminProducts" asp-route-CatID="@ViewBag.CurrentCatID" asp-action="Index"></pager>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts{
	<script>
		$(document).ready(function () {
			jQuery("#txtCatID").change(function () {
				var catID = jQuery(this).children(":selected").attr("value");
				catID = parseFloat(catID);
				$('#txtCatID option')
					.removeAttr('selected');
				$("#txtCatID > [value=" + catID + "]").attr("selected", "true");
				$.ajax({
					url: '/Admin/AdminProducts/Filtter',
					datatype: "json",
					type: "GET",
					data: {
						CatID: catID
					},
					async: true,
					success: function (results) {
						if (results.status == "success") {
							window.location.href = results.redirectUrl;
						}
					},
					error: function (xhr) {
						alert('error');
					}
				});
			});
			//Tìm kiếm
			$("#keyword").keyup(function () {
				var strkeyword = $('#keyword').val();
				$.ajax({
					url: '/Admin/Search/FindProduct/',
					datatype: "json",
					type: "POST",
					data: { keyword: strkeyword },
					async: true,
					success: function (results) {
						$("#records_table").html("");
						$("#records_table").html(results);
					},
					error: function (xhr) {
						alert('error');
					}
				});
			});

		});
	</script>

}

