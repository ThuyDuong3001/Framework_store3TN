@model IEnumerable<store_3TN.Models.Voucher>

@{
    ViewData["Title"] = "Danh sách khuyến mãi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
	<div class="header-sub-title">
		<nav class="breadcrumb breadcrumb-dash">
			<a class="breadcrumb-item" asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
			<a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminVouchers" asp-action="Index">Danh sách khuyến mãi</a>
			@*            <span class="breadcrumb-item active">Tạo mới quyền truy cập</span>
			*@
		</nav>
	</div>
	<!--End page header -->
	<br />
	<br />
<h1>Danh sách khuyến mãi</h1>

	<div class="card">
		<div class="card-body">
			<div class="row m-b-30">
				<div class="col-lg-8">
					<div class="row">
                </div>
				</div>
				<!--Start input search -->
				<div class="col-lg-4 text-right">
					<a class="btn btn-primary" asp-area="Admin" asp-controller="AdminVouchers" asp-action="Create"><i class="anticon anticon-plus-circle m-r-5"></i><span>Thêm khuyến mãi</span></a>
				</div>
			</div>
			<div class="table-responsive">
				<table class="table table-hover e-commerce-table">
					<thead>
						<tr>
							<th>Loại khuyến mãi</th>
							<th>Số lượng</th>
							<th>Giá trị khuyến mãi</th>
							<th>Trạng thái</th>
							<th>Thao tác</th>
						</tr>
					</thead>
					<tbody id="records_table">
						@if (@Model != null)
						{
							foreach (var item in Model)
							{
								<tr>
									@if(item.VoucherType==1)
									{
										<td>FreeShip</td>
									}
									else
									{
										<td>Trị giá đơn hàng</td>
									}
									<td>@item.Amount</td>
									<td>@item.Value.ToString("#,##0") VNĐ</td>
									@if (item.IsActive ==true)
									{
										<td>
											<div class="d-flex align-items-center">
												<div class="badge badge-success badge-dot m-r-10"></div>
												<div>Hoạt động</div>
											</div>
										</td>
									}
									else
									{
										<td>
											<div class="d-flex align-items-center">
												<div class="badge badge-danger badge-dot m-r-10"></div>
												<div>Khóa</div>
											</div>
										</td>
									}								
									<td>
										<a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="AdminVouchers" asp-action="Details" asp-route-id="@item.VoucherId">Chi tiết</a>
										<a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="AdminVouchers" asp-action="Edit" asp-route-id="@item.VoucherId">Sửa</a>
@*										<a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="AdminVouchers" asp-action="Delete" asp-route-id="@item.VoucherId">Xóa</a>
*@									</td>
								</tr>
							}
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>